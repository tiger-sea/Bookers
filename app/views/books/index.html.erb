<%# Destroy成功画面 %>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<%# 投稿表示用 %>
<h1>Books</h1>
<table>
  <thead>
    <%# trはテーブルの行を表す %>
    <tr>
    <%# thは見出しのセル(列や行のタイトル) %>
      <th id="bold">Title</th>
      <th id="bold">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td class="paint"><%= link_to "Show", book_path(book.id) %></td>
        <td class="paint"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="paint"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%# 投稿用 %>
<h1>New Books</h1>

<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>
